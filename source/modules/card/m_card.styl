.m_card
  position relative
  padding 15px 0
  @media SM
    padding-top 30px
    padding-bottom 0
  @media LG
    padding-top 50px
  .section-title
    margin-bottom 20px
    h1
      line-height 1
      @media SM
        padding-right 180px
      @media MD
        font-size 42px
      @media LG
        font-size 52px
    .backward
      margin-top 10px
      @media SM
        margin-top 0
        position absolute
        right 0
        bottom 5px
      a
        color $green
        position relative
        display inline-block
        vertical-align middle
        padding-left 20px
        font-size 14px
        line-height 20px
        &:after
          content ''
          background: url('../images/sprite.png') no-repeat -100px -350px;
          width: 12px;
          height: 12px;
          position absolute
          left 0
          top 50%
          margin-top -(@height/2)
        &:hover
          color #000
  .card-item
    clearfix()
    border 1px solid #dddddd
    position relative
    .lead-image
      border-bottom 1px solid #dddddd
      height 430px
      line-height 430px
      position relative
      text-align center
      @media SM
        position absolute
        left 0
        top 0
        height 100%
        width 30%
        padding 15px
        border-bottom none
      @media LG
        width 43%
      img
        display inline-block
        vertical-align middle
        max-width 100%
        max-height 100%
        @media SM
          vertical-align top
          top 50%
          position relative
          transform translateY(-50%)
      .card-icons
        position absolute
        left 0
        top 0
        z-index 1
        padding 15px
        line-height 1
        > div
          width 60px
          height 60px
          border-radius 50%
          font-size 8px
          text-align center
          text-transform uppercase
          bold()
          display table
          margin-bottom 5px
          > span
            display table-cell
            vertical-align middle
        .new
          background #699a35
          color #fff
          box-shadow 0 8px 16px rgba(105, 154, 53, .36)
        .top
          background #ed3131
          color #fff
          box-shadow 0px 8px 16px rgba(237, 49, 49, .36)
        .share
          background #fff545
          color #000000
          box-shadow 0px 8px 16px rgba(255, 245, 69, .36)
    .lead-details
      padding 15px
      @media SM
        float right
        height auto
        width 70%
        border-left 1px solid #ddd
      @media LG
        width 57%
      .price
        bold()
        font-size 36px
        i
          font-style normal
        span
          font-size 24px
      .available
        margin-bottom 15px
        @media SM
          margin-bottom 20px
          margin-top 5px
        span
          font-size 14px
          &.yes
            color $green
          &.no
            color #bebebe
      .action
        position relative
      .total-items
        width 120px
        height 45px
        text-align center
        line-height 43px
        overflow hidden
        background #f0f0f0
        @media screen and (min-width: 540px)
          margin-top 0
          display inline-block
          vertical-align middle
        input
          float left
        .qty
          width 50px
          height 35px
          margin 5px 0
          text-align center
          font-size 16px
          color #555555
          background #fff
          border-radius $radius
          border none
        .qtyminus,
        .qtyplus
          width 35px
          height 45px
          color #555
          background none
          border none
          color #999999
          font-weight bold
          font-size 0
          text-indent -9999px
        .qtyminus
          background: url('../images/counter-buttons.png') no-repeat -14px -1px;
          &:hover
            background-position -6px -68px
        .qtyplus
          background: url('../images/counter-buttons.png') no-repeat -66px 3px;
          &:hover
            background-position -74px -64px
      .cart-options
        margin-top 15px
        @media screen and (min-width: 540px)
          margin-top 0
          display inline-block
          vertical-align middle
          padding-left 15px
        a
          padding 10px 20px
          font-size 14px
          &:hover
            box-shadow none
        > div
          margin-bottom 10px
          @media screen and (min-width: 380px)
            display inline-block
            vertical-align middle
            margin-right 10px
          @media screen and (min-width: 540px)
            margin-bottom 0
        .add-to-cart
          a
            padding-left 50px
            &:before
              content ''
              background: url('../images/sprite.png') no-repeat -400px -50px;
              width: 16px;
              height: 14px;
              position absolute
              left 25px
              top 50%
              margin-top -8px
        .simple-add-to-cart
          a
            padding-left 50px
            &:before
              content ''
              background: url('../images/sprite.png') no-repeat -450px -50px;
              width: 12px;
              height: 17px;
              position absolute
              left 25px
              top 50%
              margin-top -8.5px
        &.no-items
          @media screen and (min-width: 540px)
            display block
            padding-left 0
          @media SM
            margin-top -43px
            position relative
            padding-left 150px
          @media MD
            position absolute
            left 0
            top 5px
            width 100%
            padding-left 150px
            margin-top 0
          .defer-to-cart
            position relative
            a
              position relative
              z-index 10
              @media screen and (min-width: 540px)
                position relative
                top -45px
                left 135px
              @media SM
                top 0
                left 0
              &:hover + .tips
                display block
            .tips
              position absolute
              left 0
              bottom 100%
              width auto
              max-width 310px
              box-shadow 0px 1px 3px 0 rgba(0, 0, 0, 0.4)
              background #fff
              padding 15px
              margin-bottom 20px
              font-size 14px
              color #555
              display none
              @media XS
                padding 20px
              @media screen and (min-width: 540px)
                margin-bottom 65px
              @media SM
                margin-bottom 20px
              &:after
                content ''
                position: absolute;
                width: 0;
                height: 0;
                bottom: -20px;
                left 20px
                border: 10px solid black;
                border-color: transparent transparent #fff #fff;
                transform-origin: 0 0;
                transform: rotate(-45deg);
                box-shadow: -2px 2px 3px 0px rgba(0,0,0,0.2)
                @media screen and (min-width: 540px)
                  left auto
                  right 100px
                @media SM
                  left 50px
                  right auto
              a
                color $green
                display inline !important
                padding 0 !important
                top 0 !important
                left 0 !important
                bottom 0 !important
                right 0 !important
                position static !important
                &:hover
                  color #000
            .label
              font-style italic
              font-size 14px
              color #555555
              margin-top 10px
              @media screen and (min-width: 540px)
                margin-top -25px
              @media SM
                margin-top 10px
                margin-bottom -10px
              @media MD
                margin-top -35px
                width 100%
                line-height 1.2
                position relative
                padding-left 170px

      .details
        padding-top 15px
        padding-bottom 10px
        @media SM
          padding-top 25px
          padding-bottom 15px
        ul
          font-size 0
          li
            anim()
            display inline-block
            vertical-align middle
            background #d6d395
            font-size 12px
            color #6b6a4c
            line-height 1
            padding 8px 15px
            border-radius $radius
            margin-right 5px
            margin-bottom 5px
            cursor default
            &:hover
              color #fff
              background $btn-green
      .desc
        font-size 14px
        line-height 24px
        color #555
        padding-bottom 15px
        p:last-child
          margin-bottom 0
      .socials-share
        border-top 1px solid #dddddd
        margin-left -15px
        margin-right -15px
        padding-left 15px
        padding-right 15px
        padding-top 15px
        font-size 0
        span
          color #555
          font-size 14px
          line-height 24px
          display inline-block
          vertical-align middle
          margin-right 10px
        a
          display inline-block
          vertical-align middle
          width 24px
          height 24px
          background-image url("../images/sprite.png")
          background-repeat no-repeat
          margin-right 5px
          &:hover
            opacity .8
          &.vk
            background-position 0 -150px
          &.in
            background-position -50px -150px
          &.fb
            background-position -100px -150px
          &.gp
            background-position -150px -150px
          &.tt
            background-position -200px -150px