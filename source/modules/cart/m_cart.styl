.m_cart
  position relative
  padding-top 30px
  @media LG
    padding-top 50px
  .cart-items
    table
      text-align left
      @media screen and (max-width: 768px)
        width 100%
      th,
      td
        box-shadow none
        border none
      th
        color #555555
        font-size 12px
        font-weight normal
        background #fff
      td
        background none
        @media screen and (max-width: 992px)
          display block
          padding 0
        &:first-child
          @media screen and (max-width: 992px)
            position absolute
            left 0
            top 10px
          @media screen and (max-width: 400px)
            position static
        &:nth-child(2)
          @media screen and (max-width: 992px)
            padding-right 50px
            float left
            width 100%
          @media screen and (max-width: 400px)
            padding-right 0
        &:nth-child(3),
        &:nth-child(4)
          @media screen and (max-width: 992px)
            float left
        &:nth-child(4)
          @media screen and (max-width: 540px)
            float left
        &:nth-child(3)
          @media screen and (max-width: 540px)
            float right
            text-align right
        &:nth-child(5)
          @media screen and (max-width: 992px)
            float right
            text-align right
          @media screen and (max-width: 540px)
            float left
            width 100%
            text-align left
            text-align right
            .sum
              width 100%
        &:last-child
          @media screen and (max-width: 992px)
            position absolute
            right 10px
            top 10px
      tr
        border-bottom 1px solid #ebebeb
        @media screen and (max-width: 992px)
          clearfix()
          display block
          position relative
          padding-left 120px
          padding-top 10px
          padding-bottom 10px
          min-height 125px
        @media screen and (max-width: 400px)
          padding-left 0
        &:first-child
          @media screen and (max-width: 992px)
            display none
      .image
        width 170px
        text-align center
        @media screen and (max-width: 1024px)
          width 100px
        @media screen and (max-width: 992px)
          height 100px
          line-height 100px
        @media screen and (max-width: 400px)
          width 100%
          text-align left
          margin-bottom 10px
        img
          max-width 100%
          max-height 100px
          @media screen and (max-width: 992px)
            display inline-block
            vertical-align middle
      .title
        @media screen and (max-width: 540px)
          padding-bottom 15px
        a
          anim()
          bold()
          color $green
          font-size 16px
          &:hover
            color #000
      .sum
        bold()
        font-size 15px
        width 120px
      .remove
        a
          background: url('../images/sprite.png') no-repeat 0 -50px;
          width: 15px;
          height: 15px;
          display inline-block
          vertical-align middle
          &:hover
            background-position 0 -100px
      .count
        height 25px
        width 130px
        .total-items
          font-size 0
          input
            display inline-block
            vertical-align middle
          input.qty
            background none
            border none
            width 30px
            height 25px
            line-height 25px
            font-size 18px
            color #3c4858
            text-align center
          input.qtyplus,
          input.qtyminus
            anim()
            width 45px
            background $btn-green
            color #fff
            bold()
            border none
            height 25px
            font-size 18px
            &:hover
              background $red
          input.qtyminus
            border-radius 10px 0 0 10px
          input.qtyplus
            border-radius 0 10px 10px 0
      .details
        padding-top 15px
        @media screen and (max-width: 992px)
          padding-bottom 15px
        @media screen and (max-width: 540px)
          display none
        ul
          font-size 0
          li
            anim()
            display inline-block
            vertical-align middle
            background #d6d395
            font-size 12px
            color #6b6a4c
            line-height 1
            padding 8px 15px
            border-radius $radius
            margin-right 5px
            margin-bottom 5px
            cursor default
            &:hover
              color #fff
              background $btn-green
  .cart-items-total
    padding-top 15px
    @media SM
      padding-top 30px
    clearfix()
    .codes
      margin-bottom 30px
      @media SM
        width 460px
        float left
      .form
        position relative
        @media XS
          padding-right 150px
        .form-row
          @media XS
            margin-top 0
        .form-row:last-child
          @media XS
            position absolute
            right 0
            top 0
        button
          padding 12px 30px
          font-size 14px
          line-height 1
    .total-price
      bold()
      font-size 32px
      text-align center
      border-bottom 1px solid #ebebeb
      padding-bottom 15px
      margin-left -15px
      margin-right -15px
      margin-bottom 15px
      @media XS
        font-size 36px
      @media SM
        float right
        width 250px
        font-size 24px
        border-bottom none
        padding-bottom 0
        line-height 38px
        text-align right
        margin 0
  .cart-items-action
    clearfix()
    @media SM
      border-top 1px solid #ebebeb
      padding-top 30px
      padding-bottom 30px
    .submit
      text-align center
      margin-bottom 15px
      @media XS
        margin-bottom 30px
        margin-top 30px
      @media SM
        margin-top 0
        float right
        margin-bottom 0
    .back
      clearfix()
      text-align center
      @media SM
        float left
        padding-top 8px
      .forward
        anim()
        color #555
        border 1px solid #555
        display inline-block
        vertical-align middle
        padding 8px 30px
        border-radius 20px
        margin-bottom 15px
        @media XS
          float left
        @media SM
          margin-bottom 0
          float none
        &:hover
          background $btn-green
          color #fff
          border-color $btn-green
      .backward
        color $green
        position relative
        display inline-block
        vertical-align middle
        padding-left 20px
        font-size 14px
        line-height 40px
        margin-bottom 15px
        @media XS
          float right
        @media SM
          margin-bottom 0
          float none
          margin-left 20px
        &:hover
          color #000
        &:after
          content ''
          background: url('../images/sprite.png') no-repeat -100px -350px;
          width: 12px;
          height: 12px;
          position absolute
          left 0
          top 50%
          margin-top -(@height/2)
