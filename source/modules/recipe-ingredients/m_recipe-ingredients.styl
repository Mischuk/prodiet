.m_recipe-ingredients
  border 1px solid #dddddd
  padding 15px
  border-radius $radius
  margin-bottom 20px
  @media XS
    padding 20px
  @media MD
    padding 30px
  h2
    color $brown
  .ingredients-list
    li
      position relative
      padding-left 30px
      padding-top 10px
      padding-bottom 10px
      font-size 16px
      color #555555
      &:after
        content ''
        background: url('../images/sprite.png') no-repeat -200px -300px;
        width: 21px;
        height: 21px;
        position absolute
        left 0
        top 10px
  .ingredients-cart
    margin-bottom 20px
    .item
      border-bottom 1px solid #dddddd
      padding 20px 0
      position relative
      padding-left 80px
      .image
        width 75px
        height 75px
        line-height 75px
        text-align center
        position absolute
        left 0
        top 10px
        a
          display block
          height 100%
          width 100%
          line-height 75px
        img
          display inline-block
          vertical-align middle
          max-width 100%
          max-height 100%
          width auto
          height auto
          margin-bottom 0
      .details
        @media SM
          padding-right 280px
          min-height 60px
        .title
          margin-bottom 10px
          a
            color $green
            anim()
            bold()
            text-decoration none
            &:hover
              color #000
        .desc
          color #bebebe
          margin-bottom 10px
      .action
        @media SM
          position absolute
          right 0
          top 8px
        .price
          bold()
          font-size 15px
          margin 10px 0
          height 25px
          line-height 25px
          display inline-block
          vertical-align middle
          @media SM
            width 90px
        .add-to-cart
          width 45px
          height 25px
          display inline-block
          vertical-align middle
          a
            display block
            width 100%
            height 100%
            background #fff
            position relative
            &:after
              content ''
              background: url('../images/sprite.png') no-repeat -200px -200px;
              width: 24px;
              height: 21px;
              position absolute
              left 50%
              top 50%
              margin-left -(@width/2)
              margin-top -(@height/2)
            &:hover
              &:after
                background-position -200px -250px
        .count
          @media screen and (min-width: 420px)
            display inline-block
            vertical-align middle
            height 25px
            margin-right 10px
          .total-items
            font-size 0
            input
              display inline-block
              vertical-align middle
            input.qty
              background none
              border none
              width 30px
              height 25px
              line-height 25px
              font-size 18px
              color #3c4858
              text-align center
            input.qtyplus,
            input.qtyminus
              anim()
              width 45px
              background $btn-green
              color #fff
              bold()
              border none
              height 25px
              font-size 18px
              &:hover
                background $red
            input.qtyminus
              border-radius 10px 0 0 10px
            input.qtyplus
              border-radius 0 10px 10px 0
