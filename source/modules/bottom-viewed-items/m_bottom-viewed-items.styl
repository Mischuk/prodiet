.m_top-items
  background url("../images/pattern_paper.jpg") repeat 0 0
  background-attachment fixed
  padding 30px 0
  min-height 522px
  @media LG
    padding 50px 0
  .slick-slider
    position static
  .slick-arrow
    anim()
    width 50px
    height 50px
    position absolute
    top 50%
    margin-top -(@height/2)
    background #fff
    border-radius 50%
    border none
    text-indent -9999px
    box-shadow 0 16px 38px rgba(0,0,0,.35)
    z-index 1
    &:hover
      background $btn-green
      box-shadow 0 8px 16px rgba(0,0,0,.25)
    &:after
      content ''
      position absolute
      left 50%
      top 50%
      background-image url("../images/sprite.png")
      background-repeat no-repeat
    &.slick-prev
      left 50%
      margin-left -655px
      &:after
        width 13px
        height 25px
        margin-top -(@height/2)
        margin-left -(@width/2)
        background-position -250px -150px
      &:hover
        &:after
          background-position -300px -250px
    &.slick-next
      right 50%
      margin-right -655px
      &:after
        width 13px
        height 24px
        margin-top -(@height/2)
        margin-left -5px
        background-position -300px -150px
      &:hover
        &:after
          background-position -350px -250px
  .top-items-nav
    text-align left
    margin-bottom 20px
    padding-left 10px
    a
      anim()
      futuris()
      color #9b794e
      font-size 21px
      font-weight bold
      display inline-block
      vertical-align middle
      line-height 1
      margin-right 10px
      margin-bottom 10px
      @media XS
        font-size 32px
      @media SM
        margin-right 50px
      &.current
        color $brown
        cursor default
  .top-items-content
    .slide
      padding 10px
      .item
        background #fff
        box-shadow 2px 2px 2px rgba(0,0,0,.3)
        border-radius $radius
        height 380px
        position relative
        padding-bottom 50px
        .image
          height 200px
          line-height 200px
          text-align center
          a
            display block
            width 100%
            height 100%
            img
              display inline-block
              vertical-align middle
              max-width 100%
              max-height 100%
        .details
          padding 0 15px 15px
          .title
            margin-bottom 10px
            word-break break-word
            @media screen and (min-width: 460px)
              overflow hidden
              max-height 66px
            @media LG
              max-height 92px
            a
              bold()
              color #000
              font-size 15px
              &:hover
                color $green
          .available
            margin-bottom 10px
            span
              font-size 14px
              &.yes
                color $green
              &.no
                color #bebebe
          .price
            bold()
            font-size 15px
            @media LG
              position absolute
              left 0
              bottom 0
              line-height 45px
              width 105px
              text-align center
              z-index 1
              background #fff
        .bottom
          clearfix()
          position absolute
          left 0
          bottom 0
          width 100%
          background #f0f0f0
          border-top 1px solid #ebebeb
          height 46px
          @media LG
            padding-left 105px
          .total-items
            float left
            width 120px
            height 45px
            text-align center
            line-height 43px
            overflow hidden
            input
              float left
            .qty
              width 50px
              height 35px
              margin 5px 0
              text-align center
              font-size 16px
              color #555555
              background #fff
              border-radius $radius
              border none
            .qtyminus,
            .qtyplus
              width 35px
              height 45px
              color #555
              background none
              border none
              color #999999
              font-weight bold
              font-size 0
              text-indent -9999px
            .qtyminus
              background: url('../images/counter-buttons.png') no-repeat -14px -1px;
              &:hover
                background-position -6px -68px
            .qtyplus
              background: url('../images/counter-buttons.png') no-repeat -66px 3px;
              &:hover
                background-position -74px -64px
          .add-to-cart
            float right
            height 100%
            width 45px
            a
              display block
              width 100%
              height 100%
              background #fff
              position relative
              &:after
                content ''
                background: url('../images/sprite.png') no-repeat -200px -200px;
                width: 24px;
                height: 21px;
                position absolute
                left 50%
                top 50%
                margin-left -(@width/2)
                margin-top -(@height/2)
              &:hover
                &:after
                  background-position -200px -250px
    .top-item-carousels
      opacity 0
      &.op1
        opacity 1
      &.disabled
        display none
      &.enabled
        display block
  .action
    text-align center
    margin-top 30px
.top-items-loader
  width: 100px;
  height: 100px;
  border-radius: 100%;
  position absolute
  left 50%
  margin-left -50px
  top 200px
  z-index 10
  display none
  &.show
    display block

.top-items-loader span
  display: inline-block;
  width: 20px;
  height: 20px;
  border-radius: 100%;
  background-color $green
  margin: 35px 5px;
  opacity: 0;

.top-items-loader span:nth-child(1)
  animation: opacitychange 1s ease-in-out infinite;
.top-items-loader span:nth-child(2)
  animation: opacitychange 1s ease-in-out 0.33s infinite;
.top-items-loader span:nth-child(3)
  animation: opacitychange 1s ease-in-out 0.66s infinite;
@keyframes opacitychange
  0%, 100%
    opacity: 0;
  60%
    opacity: 1;



