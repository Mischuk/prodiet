.m_proposals
  padding 30px 0
  background #fff4dc
  @media LG
    padding 50px 0
  @media screen and (min-width: 1300px)
    overflow hidden
  .action
    text-align center
    margin-top 15px
    @media SM
      display none
  .slick-slider
    position static
  .slick-arrow
    anim()
    width 50px
    height 50px
    position absolute
    top 50%
    margin-top -(@height/2)
    background #fff
    border-radius 50%
    border none
    text-indent -9999px
    box-shadow 0 16px 38px rgba(0,0,0,.35)
    z-index 1
    &:hover
      background $btn-green
      box-shadow 0 8px 16px rgba(0,0,0,.25)
    &:after
      content ''
      position absolute
      left 50%
      top 50%
      background-image url("../images/sprite.png")
      background-repeat no-repeat
    &.slick-prev
      left 50%
      margin-left -655px
      &:after
        width 13px
        height 25px
        margin-top -(@height/2)
        margin-left -(@width/2)
        background-position -250px -150px
      &:hover
        &:after
          background-position -300px -250px
    &.slick-next
      right 50%
      margin-right -655px
      &:after
        width 13px
        height 24px
        margin-top -(@height/2)
        margin-left -5px
        background-position -300px -150px
      &:hover
        &:after
          background-position -350px -250px
  .top-item-carousels
    opacity 0
    anim()
    position relative
    @media screen and (min-width: 1300px)
      &:after
        content ''
        width 365px
        height 221px
        background url("../images/proposals-left-img.png") no-repeat 0 0
        position absolute
        left 0
        bottom 0
        margin-left -175px
        margin-bottom -50px
      &:before
        content ''
        width 364px
        height 260px
        background url("../images/proposals-right-img.png") no-repeat 0 0
        position absolute
        right 0
        top 0
        margin-right -195px
        margin-top -85px
    &.op1
      opacity 1
    .slick-list
      z-index 10
  .slide
    padding 10px
    .item
      background #fff
      box-shadow 2px 2px 2px rgba(0,0,0,.3)
      border-radius $radius
      height 380px
      position relative
      padding-bottom 50px
      overflow hidden
      &:after
        content ''
        position absolute
        left 0
        bottom -40px
        height 40px
        width 100%
        box-shadow 0 -30px 30px 10px rgba(255,255,255,.9)
        z-index 1
      @media MD
        height 300px
      @media LG
        height 380px
      .image
        height 200px
        @media screen and (min-width: 460px)
          height 150px
        @media LG
          height 200px
          padding 15px
          padding-bottom 0
        a
          display block
          height 100%
          background-repeat no-repeat
          background-position 50%
          background-size cover
          position relative
          &:after
            anim()
            content ''
            position absolute
            left 0
            top 0
            width 100%
            height 100%
            background black
            opacity 0
          &:hover
            &:after
              opacity .2
      .details
        padding 15px
        .post-date
          font-size 14px
          color #bebebe
          margin-bottom 10px
        .title
          margin-bottom 10px
          a
            font-size 17px
            bold()
            color #000
            &:hover
              color $green
        .desc
          font-size 14px
          line-height 24px
          color #555