.m_contacts
  position relative
  .section-title
    text-align center
    margin-bottom 15px
    @media LG
      margin-bottom 40px
    h2
      futuris()
      color $brown
      font-size 32px
      line-height 1
      @media XS
        font-size 40px
      @media MD
        font-size 52px
      @media LG
        margin-top 35px
    .m_breadcrumbs
      margin-top 15px
      margin-bottom 15px
      a
        color $green
      li:after
        background-image url("../images/breadcrumb-arrow.png")
      li:last-child a
        color $brown
  #map
    height 300px
    width 100%
    @media SM
      height 400px
    @media MD
      height 500px
  .contacts-info
    margin-top 30px
    .contacts-form,
    .contacts-details
      background #fff
      border 1px solid #f2ebdb
      padding 15px
      margin-bottom 30px
      @media SM
        width 49%
        float left
        padding 30px
        min-height 350px
      @media MD
        padding 30px
        min-height 335px
    .contacts-form
      @media SM
        margin-right 2%
      .form-title
        h2
          color $brown
          font-size 24px
    .contacts-details
      .place
        font-size 15px
        .row
          margin-bottom 10px
          @media MD
            margin-bottom 20px
          &:last-child
            margin-bottom 0
        .label
          color #555555
        .value
          color #000
          span
            color #555555
          b
            bold()
            font-size 20px
          a
            color $green
            &:hover
              color #000