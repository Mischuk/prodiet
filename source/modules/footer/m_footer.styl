.m_footer
  position absolute
  left 0
  bottom 0
  width 100%
  padding 30px 0
  background url("../images/footer.jpg") no-repeat 50%
  background-size cover
  color #fff
  font-size 14px
  @media MD
    padding 45px 0
  @media LG
    padding 60px 0
  i
    font-style normal
  .copyright
    text-align center
    @media MD
      float left
      width 25%
      text-align left
    span
      @media MD
        display block
        margin-bottom 10px
  .menu
    display none
    @media MD
      clearfix()
      float left
      width 50%
      display block
    .column
      display inline-block
      vertical-align top
      width 49%
      padding-left 20px
      &:first-child
        padding-left 40px
    .title
      margin-bottom 15px
      a
        futuris()
        color #fff
        font-size 18px
    ul
      li
        margin-bottom 15px
        a
          color #fff
          font-size 14px
          text-decoration underline
          &:hover
            text-decoration none
  .info
    text-align center
    padding-top 15px
    @media MD
      float left
      width 25%
      padding-top 0
    .row
      > div
        margin 10px 0
        @media XS
          display inline-block
          vertical-align top
          width 49%
        @media MD
          display block
          width 100%
        &:first-child
          @media XS
            text-align right
            padding-right 5px
          @media MD
            text-align left
            padding-right 0
        &:last-child
          @media XS
            padding-left 5px
            text-align left
          @media MD
            padding-left 0
    .tel
      @media MD
        margin-top 0 !important
      a
        futuris()
        color #fff
        font-size 18px
    .callback
      a
        color #d6d395
        text-decoration underline
        &:hover
          color #fff
    .local
      span
        display inline-block
        vertical-align middle
        position relative
        padding-left 20px
        &:after
          content ''
          background: url('../images/sprite.png') no-repeat 0 -300px;
          width: 13px;
          height: 16px;
          position absolute
          left 0
          top 50%
          margin-top -(@height/2)
    .email
      a
        color #fff
        &:hover
          text-decoration underline
        span
          position relative
          display inline-block
          vertical-align middle
          padding-left 20px
          &:after
            content ''
            background: url('../images/sprite.png') no-repeat -50px -300px;
            width: 14px;
            height: 11px;
            position absolute
            left 0
            top 50%
            margin-top -(@height/2)
    .socials
      span
        display block
        margin-bottom 5px
      a
        display inline-block
        width 30px
        height 30px
        background-image url("../images/sprite.png")
        background-repeat no-repeat
        @media XS
          margin-left 5px
        @media MD
          margin-left 0
          margin-right 10px
        &.vk
          background-position 0 0
          &:hover
            background-position -250px 0
        &.in
          background-position -50px 0
          &:hover
            background-position -300px 0
        &.fb
          background-position -100px 0
          &:hover
            background-position -350px 0
        &.gp
          background-position -150px 0
          &:hover
            background-position -400px 0
        &.tw
          background-position -200px 0
          &:hover
            background-position -450px 0
    .payment
      padding-bottom 25px
      background url("../images/payment.png") no-repeat bottom center
      @media XS
        background-position 5% 100%
      @media MD
        background-position 0 100%
    .developed
      @media MD
        text-align left
        margin-top 15px
      a
        color #fff
        text-decoration underline
        &:hover
          text-decoration none