.m_news
  position relative
  padding 30px 0
  @media LG
    padding 50px 0
  .list
    margin-top 30px
    @media LG
      margin-top 50px
    .item
      border-top 1px solid #dcdcdc
      padding 15px 0
      @media XS
        clearfix()
      @media MD
        padding 30px 0
      &:last-child
        border-bottom 1px solid #dcdcdc
      .image
        border 1px solid #dcdcdc
        padding 15px
        margin-bottom 15px
        overflow hidden
        @media XS
          float left
          width 180px
          height 180px
          line-height 178px
          padding 0
          text-align center
        @media SM
          width 270px
          margin-bottom 0
        a
          display block
          width 100%
          height 100%
          position relative
          &:after
            content ''
            position absolute
            left 0
            top 0
            width 100%
            height 100%
            background #000
            opacity 0
            anim()
          &:hover
            &:after
              opacity .4
        img
          display block
          width 100%
          max-width 100%
          max-height 100%
          @media XS
            display inline-block
            vertical-align middle
            width auto
            height auto
      .details
        @media XS
          padding-left 195px
        @media SM
          padding-left 285px
        @media MD
          padding-left 295px
        .date
          color #bebebe
          margin-bottom 5px
          font-size 15px
        .title
          margin-bottom 10px
          a
            color $green
            font-size 20px
            &:hover
              color #000
        .desc
          font-size 15px
          line-height 24px
          color #555555