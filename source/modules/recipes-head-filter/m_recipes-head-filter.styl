.m_recipes-head-filter
  position relative
  max-width 860px
  margin 0 auto
  background #fff
  box-shadow 0 0 5px rgba(0,0,0,.2)
  border-radius $radius
  padding 15px
  margin-top 20px
  @media SM
    padding 25px 50px
    margin-top 40px
  .food-filter
    text-align center
    max-width 350px
    margin 0 auto
    .item
      display inline-block
      vertical-align middle
      label
        display inline-block
        .label
          color #555
          font-size 16px
          text-decoration underline
          padding 5px
        input:checked + .label
          color $green
          text-decoration none
  .selects
    margin-bottom 20px
    .col
      &:first-child
        @media SM
          padding-right 20px
      &:last-child
        @media SM
          padding-left 20px
  .select-container
    padding-left 40px
    position relative
    &.types
      &:after
        content ''
        background: url('../images/sprite.png') no-repeat -300px -50px;
        width: 25px;
        height: 25px;
        position absolute
        left 5px
        top 50%
        margin-top -(@height/2)
    &.dur
      &:after
        content ''
        background: url('../images/sprite.png') no-repeat -350px -50px;
        width: 24px;
        height: 24px;
        position absolute
        left 5px
        top 50%
        margin-top -(@height/2)
    select
      width 100%
      min-width 100%
