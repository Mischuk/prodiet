.m_order
  padding 30px 0
  .order-bill
    box-shadow: 2px 2px 2px rgba(0,0,0,0.3);
    border: solid 1px #ebebeb;
    margin-bottom 30px
    padding 30px
    border-radius $radius
    @media LG
      padding-left 30px
      width 300px
      float right
    .items,
    .delivery,
    .total
      clearfix()
    .label
      color #555
      font-size 14px
      float left
    .value
      float right
      font-size 14px
      font-weight normal
      span
        color #000
        bold()
    .items, .delivery
      .value
        font-weight bold
        span
          display inline-block
          vertical-align middle
          padding-right 12px
          position relative
          &:after
            content ''
            width 8px
            height 10px
            sprite()
            background-position -250px 0
            position absolute
            right 0
            top 50%
            margin-top -5px

    .total
      padding-top 30px
      border-top 1px solid $border
      .label, .value
        font-size 16px
      .value
        font-weight bold
        font-size 18px
        span
          display inline-block
          vertical-align middle
          padding-right 15px
          position relative
          &:after
            content ''
            width 12px
            height 14px
            sprite()
            background-position -200px 0
            position absolute
            right 0
            top 50%
            margin-top -7px
    .positions
      padding-bottom 30px
      .items
        margin-bottom 15px
  .order-steps
    @media LG
      padding-right 330px
    .step
      margin-bottom 30px
      background #f7f9f9
      border 1px solid #eeefef
      &.current
        box-shadow: 2px 2px 2px rgba(0,0,0,0.3);
        border: solid 1px #ebebeb;
        background #fff
    .step-header
      position relative
      background url("../images/pattern_paper.jpg") repeat 0 0
      padding 20px
      font-size 20px
      bold()
      color $brown
      cursor default
      // border-bottom 1px solid #eeefef
      &:after
        content ''
        background url("../images/order-step-completed.png") no-repeat 0 0
        size(24px)
        position absolute
        right 20px
        top 50%
        margin-top -12px
        opacity 0
      span
        color #9b794e
    .step-body
      padding 40px 20px
      background #fff
      @media XS
        overflow hidden
      .form-section
        padding-top 15px
        .form-row
          margin-bottom 20px
          &:last-child
            margin-bottom 0
        .label
          font-weight normal
          font-size 12px
          color #555555
          .required
            color $red
        .input
          select
            width 100%
          input
            height 40px
            //&.error
            //  border-color $red

          input,
          textarea
            anim()
            width 100%
            background #fff
            border none
            border-radius 0
            border-bottom 1px solid #d2d2d2
            padding 15px 0
            font-size 16px
          textarea
            roman()
            resize none
            padding-top 10px
            padding-bottom 0
        .remark
          font-size 12px
          line-height 16px
          color #bebebe
          cursor default
    .step-footer
      clearfix()
      background #fff
      border-top 1px solid #eeefef
      padding 20px
      button
        height 35px
        border 1px solid $btn-green
        padding 0 20px
        text-transform uppercase
        font-size 12px
        border-radius 20px
        @media SM
          padding 0 30px
      .step-prev
        float left
        background #d6d395
        color #6b6a4c
        border-color #d6d395
        &:hover
          color #fff
          border-color $green
          background $green
      .step-next
        float right
        color #fff
        background $btn-green
        &:hover
          border-color $btn-green-hover
          background $btn-green-hover
    /*
      STEP 1
    */
    .step-1
      .delivery-self
        .default-icon .icon:after
          background-position 0 0
          width 49px
          height 50px
          margin-left -(@width/2)
          margin-top -(@height/2)
        .delivery-form .default-icon-active .icon:after
          background-position -211px 0
          width 49px
          height 50px
          margin-left -(@width/2)
          margin-top -(@height/2)
      .delivery-courier
        .default-icon .icon:after
          background-position -84px 0px
          width 48px
          height 50px
          margin-left -(@width/2)
          margin-top -(@height/2)
        .delivery-form .default-icon-active .icon:after
          width 50px
          height 48px
          margin-left -(@width/2)
          margin-top -(@height/2)
          background-position -153px 0px
      .delivery-transport
        .default-icon .icon:after
          background-position -300px -150px
          width 60px
          height 37px
          margin-left -(@width/2)
          margin-top -(@height/2)
        .delivery-form .default-icon-active .icon:after
          width 60px
          height 37px
          margin-left -(@width/2)
          margin-top -(@height/2)
          background-position -400px -150px
      .delivery-courier,
      .delivery-transport
        margin-top 40px
        @media SM
          margin-top 0
      .delivery-transport
        @media SM
          margin-top 40px
      .delivery-self,
      .delivery-courier,
      .delivery-transport
        @media SM
          display inline-block
          vertical-align top
          width 49%
        .default-icon
          cursor pointer
          padding-left 20px
          padding-right 10px
          .icon
            position relative
            size(100px)
            float left
            border-radius 50%
            border 1px solid $border
            &:after
              content ''
              background-image url("../images/order.png")
              background-repeat no-repeat
              position absolute
              left 50%
              top 50%
          .label
            position relative
            z-index 100
            display table
            height 100px
            padding-left 10px
            font-size 14px
            span
              display table-cell
              vertical-align middle
              color $green
              @media LG
                font-size 18px
              i.count
                color #555
                display block
                font-size 12px
                @media LG
                  font-size 14px
        .delivery-form
          display none
          position relative
          top -120px
          margin-bottom -120px
          background #fff
          padding 20px
          box-shadow 0 2px 7px #e5eaeb, inset 0 0 0 1px #e3e9ea
          .default-icon-active
            cursor pointer
            overflow hidden
            .icon
              position relative
              size(100px)
              float left
              border-radius 50%
              border 1px solid #699a35
              background #699a35
              box-shadow 0 1px 5px rgba(105, 154, 53, .2), 0 2px 2px rgba(105, 154, 53, .14), 0 3px 1px -2px rgba(105, 154, 53, .12)
              &:after
                content ''
                background-image url("../images/order.png")
                background-repeat no-repeat
                position absolute
                left 50%
                top 50%
      .delivery-self-map
        margin-top 30px
        #dsmap
          width 100%
          height 400px
      .delivery-self-list
        position relative
        overflow auto
        height 230px
        border 1px solid #e6e6e6
        li
          border-bottom 1px solid #e6e6e6
          font-size 14px
          padding 15px
          a
            color $green
            &:hover
              color #000
    /*
      STEP 2
    */
    .step-2
      .step-body
        padding 20px
        .form-date
          @media SM
            clearfix()
      .form-section
        padding-top 0
        margin-bottom 20px
        @media SM
          float left
          width 50%
          margin-bottom 0
        &:last-child
          margin-bottom 0
      .inputs
        clearfix()
        @media LG
          padding-right 50px
        .input
          float left
          width 45%
          margin-right 5%
    /*
      STEP 3
    */
    .step-3
      .step-body
        padding 20px
      .form-pay
        .checkbox
          display block
          margin-left 0
          margin-bottom 10px
          &:last-child
            margin-bottom 0
          .label
            font-size 16px
    /*
      STEP 4
    */
    .step-4
      .step-body
        padding 20px
        .politicy
          position relative
          .icon
            position absolute
            left 0
            top 0
          .label
            padding-left 30px
    /*
      STEP Final
    */
    .step-final
      .step-header
        background #fff
        padding-bottom 0
        &:after
          display none !important
      .step-body
        padding 20px
        .row
          & + .row
            margin-top 10px
        .value,
        .label
          display inline-block
          vertical-align middle
          font-size 16px
        .label
          color #999
        .value
          color #555
      .order-total-items
        padding 10px
        background #fff
        @media MD
          padding 0
        .m_cart
          padding-top 0
          padding-bottom 0
          table
            text-align left
            th,
            td
              box-shadow none
              border none
            th
              color #555555
              font-size 12px
              font-weight normal
              background #fff
              text-transform uppercase
            td
              background none
              vertical-align top

            tr
              border-bottom 1px solid #ebebeb
              @media screen and (max-width: 992px)
                clearfix()
                display block
                position relative
                padding-top 10px
                padding-bottom 10px
                min-height 125px
              @media screen and (max-width: 400px)
                padding-left 0
              &:first-child
                @media screen and (max-width: 992px)
                  display none

            .title
              a
                anim()
                bold()
                color $green
                font-size 14px
                &:hover
                  color #000
            .price
              bold()
            .total-items
              bold()
            .total-sum
              bold()
              i
                display none
            .preview
              width 120px
              height 100px
              line-height 98px
              text-align center
              overflow hidden
              img
                display inline-block
                vertical-align middle
                max-width 96%
                max-height 96%


          .cart-sum-result
            padding 20px
            background #fff
            border-bottom none
            .total
              width 100%
              padding 0
              line-height 1.1
              text-align left
              font-size 24px
              @media XS
                text-align right
              &.delivery
                font-size 15px
                line-height 1
                .sum
                  // display inline-block
                  // vertical-align middle
                  span
                    display inline-block
                    vertical-align middle
                    font-size 15px
                    padding-right 10px
                    margin-top -2px
                    bold()
                    &:after
                      background-position -250px 0
                      width 8px
                      height 10px
                      margin-top -5px
              .label
                display block
                bold()
                @media XS
                  display inline-block
                  vertical-align middle
              .sum
                display inline-block
                vertical-align middle
                bold()
                font-size 24px
                text-align left
          .cart-final
            padding-top 0
            border-top none
            .step-footer
              position relative
              border-color #eeefef
              text-align center
              .step-prev
                float none
                display inline-block
                vertical-align middle
                margin-bottom 20px
                @media XS
                  margin-bottom 0
                  float left
              .final-submit
                float right
    // Params
    .step-body, .step-footer
      display none
    .step-final
      display none
      &.current
        display block
    .step
      &.current
        .step-body, .step-footer
          display block
      &.complete
        .step-header:after
          opacity 1
  .completed
    .completed-pay
      box-shadow: 2px 2px 2px rgba(0,0,0,0.3);
      border 1px solid #ebebeb
      background url("../images/patterns/pattern3.jpg") repeat 0 0
      padding 20px
      .title
        futuris()
        font-size 24px
        padding-bottom 15px
        margin-bottom 15px
        @media MD
          font-size 30px
      p
        font-size 16px
        line-height 24px
        margin-bottom 0
        color #000
        @media MD
          font-size 18px
          line-height 32px
      .remark
        color #555555
        font-size 14px
      .action
        margin-top 30px
        margin-bottom 30px
      .pay-variant
        clearfix()
        img
          max-width 100%
        .pay-title
          color #bebebe
          margin-bottom 5px
        .image
          height 54px
          line-height 54px
          img
            display inline-block
            vertical-align middle
            max-width 100%
            max-height 100%
        .column
          margin-bottom 20px
          @media SM
            float left
            width 33.333%
            padding-right 15px
          @media LG
            width auto
            margin-right 75px
    .completed-order-info
      padding-left 80px
      position relative
      margin-bottom 30px
      @media XS
        padding-left 100px
        margin-bottom 40px
      &:after
        content ''
        width 70px
        height 70px
        background url("../images/order-completed.png") no-repeat 0 0
        background-size cover
        position absolute
        left 0
        top 50%
        margin-top -35px
      b
        bold()
      p
        margin-bottom 0
        & + p
          margin-top 10px