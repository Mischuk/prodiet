.m_cabinet
  padding 30px 0
  @media LG
    padding 50px 0
  .cabinet-nav
    text-align center
    margin-bottom 30px
    @media LG
      margin-bottom 50px
    a
      font-size 14px
      padding 10px 20px
      margin 5px
      @media XS
        padding 10px 30px
      &.current
        background $green
        box-shadow none
  .orders-list
    &.deffered
      td
        @media screen and (max-width: 992px)
          &:nth-child(1)
            float left
            width 75%
          &:nth-child(2),
          &:nth-child(3)
            float right
            max-width 25%
            width auto
            .status
              padding-top 3px
            .sum
              width auto
          &:nth-child(4)
            float left
            width 50%
          &:nth-child(5)
            float right
            width 50%
            text-align right
        @media screen and (max-width: 420px)
          &:nth-child(1)
            width 100%
          &:nth-child(2),
          &:nth-child(3)
            width 50%
            max-width 50%
            margin-bottom 15px
          &:nth-child(2)
              text-align right
    table
      text-align left
      @media screen and (max-width: 768px)
        width 100%
      th,
      td
        box-shadow none
        border none
      th
        color #555555
        font-size 12px
        font-weight normal
        background #fff
        text-transform uppercase
      td
        background none
        vertical-align top
        @media screen and (max-width: 992px)
          display block
          padding 0
          &:nth-child(1)
            float left
            width 50%
          &:nth-child(2)
            float left
            width 50%
            text-align right
          &:nth-child(3)
            float left
            width 100%
          &:nth-child(4),
          &:nth-child(5)
            float left
          &:nth-child(6)
            float right
            text-align right
        @media screen and (max-width: 420px)
          &:nth-child(1),
          &:nth-child(2)
            width 100%
            text-align left
        @media screen and (max-width: 380px)
          &:nth-child(6)
            width 100%
            float left
            text-align left
            margin-top 15px

      tr
        border-bottom 1px solid #ebebeb
        @media screen and (max-width: 992px)
          clearfix()
          display block
          position relative
          padding-top 10px
          padding-bottom 10px
          min-height 125px
        @media screen and (max-width: 400px)
          padding-left 0
        &:first-child
          @media screen and (max-width: 992px)
            display none

      .title
        a
          anim()
          bold()
          color $green
          font-size 14px
          &:hover
            color #000
      .sum
        bold()
        font-size 15px
        width 120px
        @media screen and (max-width: 992px)
          padding 1.5px 0
      .item-id,
      .date
        font-size 14px
        @media screen and (max-width: 992px)
          margin-bottom 15px
        span
          display none
          @media screen and (max-width: 992px)
            display inline
      .list
        @media screen and (max-width: 992px)
          margin-bottom 15px
        .item + .item
          margin-top 10px
        .title,
        .image
          display inline-block
          vertical-align middle
        .title
          color #555555
          font-size 14px
          max-width 100%
        .image
          width 40px
          height 40px
          line-height 36px
          border 1px solid #dcdcdc
          text-align center
          overflow hidden
          img
            display inline-block
            vertical-align middle
            max-width 96%
            max-height 96%
      .status
        font-size 14px
        span
          background $btn-green
          color #fff
          display inline-block
          vertical-align middle
          padding 5px
          font-size 14px
          line-height 1
          border-radius $radius
      .action
        @media screen and (max-width: 992px)
          margin-top -5px
        a
          anim()
          border 1px solid #bebebe
          border-radius 20px
          color #555555
          font-size 12px
          line-height 1
          display inline-block
          vertical-align middle
          padding 13px 20px
          &:hover
            background $green
            color #fff
            border-color $green
      .buy
        margin-top -7px
        a
          padding 13px 20px
          font-size 14px
          line-height 1
      .count
        height 25px
        width 130px
        .total-items
          font-size 0
          input
            display inline-block
            vertical-align middle
          input.qty
            background none
            border none
            width 30px
            height 25px
            line-height 25px
            font-size 18px
            color #3c4858
            text-align center
          input.qtyplus,
          input.qtyminus
            anim()
            width 45px
            background $btn-green
            color #fff
            bold()
            border none
            height 25px
            font-size 18px
            &:hover
              background $red
          input.qtyminus
            border-radius 10px 0 0 10px
          input.qtyplus
            border-radius 0 10px 10px 0
  .cabinet-data
    clearfix()
    @media LG
      padding-left 100px
      padding-right 100px
    .user-personal,
    .user-global
      border 1px solid #ebebeb
      box-shadow: 2px 2px 2px rgba(0,0,0,0.3);
      padding 15px
      @media SM
        float left
        width 49%
      @media MD
        padding 30px
    .user-personal
      @media SM
        margin-right 2%
      form
        & + form
          padding-top 45px
        .form-row
          & + .form-row
            margin-top 15px
        .set-lead
          padding-top 5px
          a
            font-size 12px
            color $green
            anim()
            &:hover
              color #000
        label
          display block
          width 100%
          span.label
            display block
            font-size 12px
            line-height 1
            color #555555
          input
            border none
            border-bottom 1px solid #d2d2d2
            width 100%
            font-size 16px
            roman()
            padding 10px 0
          i.label
            font-size 12px
            color #555555
        button[type="submit"]
          padding 10px 30px
          font-size 14px
    .user-global
      margin-top 30px
      font-size 15px
      @media SM
        margin-top 0
      > div
        margin-top 15px
        &:first-child
          margin-top 0
      .user-name
        font-size 20px
      .user-rate
        span
          font-size 18px
          background $red
          color #fff
          display inline-block
          vertical-align middle
          padding 5px 10px
          border-radius 20px
      .user-rate-up
        background $btn-green
        color #fff
        margin-left -15px
        margin-right -15px
        padding 15px
        @media MD
          margin-left -30px
          margin-right -30px
          padding 15px 30px
      .user-coupones
        .title
          bold()
          margin-bottom 10px
        ul
          li
            padding 5px 0
            &.disabled
              color #bebebe
              text-decoration line-through
            span
              color $btn-green