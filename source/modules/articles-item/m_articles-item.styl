.m_articles-item
  background #fff
  box-shadow 2px 2px 2px rgba(0,0,0,.3)
  border-radius $radius
  height 450px
  position relative
  padding-bottom 50px
  overflow hidden
  margin-bottom 10px
  @media SM
    height 550px
  @media MD
    margin-bottom 0
  &:after
    content ''
    position absolute
    left 0
    bottom 10px
    height 40px
    width 100%
    box-shadow 0 -30px 30px 10px rgba(255,255,255,.9)
    z-index 1
  .image
    height 150px
    @media SM
      height 200px
      padding 15px
      padding-bottom 0
    @media MD
      height 270px
    a
      display block
      width 100%
      height 100%
      background-size cover
      background-position 50%
      background-repeat no-repeat
      position relative
      &:after
        anim()
        content ''
        width 100%
        height 100%
        position absolute
        left 0
        top 0
        background black
        opacity 0
      &:hover
        &:after
          opacity .2
  .details
    padding 15px
    .title
      a
        color #000
        bold()
        anim()
        font-size 17px
        @media screen and (min-width: 460px)
          font-size 15px
        @media SM
          font-size 17px
        &:hover
          color $green
    .post-category
      color #bebebe
      font-size 14px
      margin-bottom 10px
    .desc
      font-size 14px
      line-height 24px
      color #555555
      padding-top 10px
  .bottom
    clearfix()
    position absolute
    left 0
    bottom 0
    width 100%
    height 50px
    line-height 49px
    z-index 2
    border-top 1px solid #ebebeb
    padding 0 15px
    background #fff
    .viewed
      float left
      position relative
      padding-left 25px
      font-size 14px
      color #555555
      &:after
        content ''
        background: url('../images/sprite.png') no-repeat 0 -250px;
        width: 16px;
        height: 10px;
        position absolute
        left 0
        top 50%
        margin-top -5px
  &.lead-item
    display table
    height 375px
    width 100%
    padding 15px
    @media SM
      padding 15px 30px
    @media MD
      height 340px
    &:after
      display none
    &:hover
      .image a:after
        opacity .4
    .image
      width 100%
      height 100%
      position absolute
      left 0
      top 0
      padding 0
      a
        position relative
        &:after
          anim()
          content ''
          width 100%
          height 100%
          background #111
          opacity .6
          position absolute
          left 0
          top 0


    .details
      position relative
      top 0
      bottom auto
      z-index 10
      padding 0
      text-align center
      display table-cell
      vertical-align middle
      .title,
      .desc
        @media MD
          max-width 500px
          margin-left auto
          margin-right auto
      .title
        @media LG
          margin-bottom 10px
          margin-top 30px
        a
          color #fff
          futuris()
          font-size 24px
          line-height 1
          border-bottom 1px solid rgba(255,255,255,.5)
          @media LG
            line-height 1.2
          &:hover
           border-color transparent
      .desc
        color #fff
      .bottom
        position static
        background none
        border-top none
        height auto
        line-height 1
        padding-top 10px
        text-align center
        @media LG
          padding-top 30px
        .viewed
          color #d6d395
          float none
          display inline-block
