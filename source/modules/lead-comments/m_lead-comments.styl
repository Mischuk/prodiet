.m_lead-comments
  padding 30px 0
  background url("../images/pattern_paper.jpg") repeat 0 0
  background-attachment fixed
  @media LG
    padding 50px 0
  .action
    text-align center
    margin-top 15px
    @media SM
      display none
  .slick-slider
    position static
  .slick-arrow
    anim()
    width 50px
    height 50px
    position absolute
    top 50%
    margin-top -(@height/2)
    background #fff
    border-radius 50%
    border none
    text-indent -9999px
    box-shadow 0 16px 38px rgba(0,0,0,.35)
    z-index 1
    &:hover
      background $btn-green
      box-shadow 0 8px 16px rgba(0,0,0,.25)
    &:after
      content ''
      position absolute
      left 50%
      top 50%
      background-image url("../images/sprite.png")
      background-repeat no-repeat
    &.slick-prev
      left 50%
      margin-left -655px
      &:after
        width 13px
        height 25px
        margin-top -(@height/2)
        margin-left -(@width/2)
        background-position -250px -150px
      &:hover
        &:after
          background-position -300px -250px
    &.slick-next
      right 50%
      margin-right -655px
      &:after
        width 13px
        height 24px
        margin-top -(@height/2)
        margin-left -5px
        background-position -300px -150px
      &:hover
        &:after
          background-position -350px -250px
  .top-item-carousels
    opacity 0
    anim()
    &.op1
      opacity 1
  .slide
    padding 10px
    .item
      background #fff
      box-shadow 2px 2px 2px rgba(0,0,0,.3)
      border-radius $radius
      height 320px
      position relative
      padding 15px
      padding-bottom 50px
      overflow hidden
      @media MD
        height 300px
      .name
        bold()
        font-size 15px
        margin-bottom 10px
      .rated
        width 97px
        height 16px
        position relative
        margin-bottom 10px
        background url("../images/rating-stars-empty.png") no-repeat 0 0
        .progress
          position absolute
          left 0
          top 0
          height 100%
          background url("../images/rating-stars.png") no-repeat 0 0
      .post
        font-size 14px
        line-height 24px
        color #555555
      .details
        position absolute
        left 0
        bottom 0
        width 100%
        padding 15px
        background #fff
        z-index 1
        &:after
          content ''
          position absolute
          left 0
          top -10px
          width 100%
          height 20px
          box-shadow 0 -12px 20px white
          z-index 1
        a
          color $green
          font-size 14px
          &:hover
            text-decoration underline
            color #000
