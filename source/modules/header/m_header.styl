.m_header
  position relative
  background #fff
  height 150px
  z-index 150
  box-shadow 0 2px 5px rgba(0,0,0,.3)
  @media MD
    height 210px
  &.authorised
    .user-panel
      .guest
        display none !important
      .authorised
        display block !important
      .cart
        @media MD
          position absolute
          right 0
          top -67px
    .actions
      .mobile-search
        @media XS
          right 250px !important
      .search
        @media screen and (min-width: 480px) and (max-width: 991px)
          padding-right 249px !important
          padding-left 50px
      .contacts
        @media MD
          position absolute
          top -50px
          right 0
        @media LG
          top 0
        .tel,
        .callback
          @media MD
            display inline-block
            vertical-align middle
            margin-left 30px
            line-height 42px
          @media LG
            display block !important
            line-height 1.25 !important
            margin-left 0 !important
            margin-right 170px
  .top
    border-bottom 1px solid $border
    height 50px
    position relative
    z-index 150
    background #fff
    @media MD
      height 40px
      background $btn-green
    .menu
      display none
      float left
      margin-left -15px
      @media MD
        display block
      ul
        font-size 0
        line-height 40px
        li
          display inline-block
          vertical-align middle
          padding 0 15px
          & + li
            position relative
            &:after
              content ''
              position absolute
              left 0
              height 20px
              width 1px
              top 50%
              margin-top -10px
              background rgba(255,255,255,.5)
          a
            bold()
            anim()
            display inline-block
            vertical-align middle
            color #fff
            font-size 14px
            line-height 1
            border-bottom 1px solid transparent
            &:hover
              border-color rgba(255,255,255,.5)
    .socials
      display none
      float right
      @media MD
        display block
      ul
        font-size 0
        line-height 40px
        li
          display inline-block
          vertical-align middle
          margin-left 10px
      a
        display block
        width 24px
        height 24px
        background-image url("../images/sprite.png")
        background-repeat no-repeat
        &.vk
          background-position -24px -174px
          &:hover
            background-position 0 -150px
        &.in
          background-position -74px -174px
          &:hover
            background-position -50px -150px
        &.fb
          background-position -124px -174px
          &:hover
            background-position -100px -150px
        &.gp
          background-position -174px -174px
          &:hover
            background-position -150px -150px
        &.tw
          background-position -224px -174px
          &:hover
            background-position -200px -150px
    .mobile-menu
      position absolute
      left 0
      top 0
      width 50px
      height 50px
      @media MD
        display none
  .bottom
    height 100px
    position relative
    z-index 150
    background #fff
    @media MD
      height 170px
    .logo
      height 50px
      margin 25px 0
      position absolute
      left 15px
      top 0
      @media XS
        height 70px
        margin 15px 0
      @media MD
        height 116px
        margin 17px 0
      img
        display block
        max-width 100%
        height 100%
      span
        display none
        @media MD
          display block
          color #555555
          font-size 11px
          line-height 20px
          text-transform uppercase
    .actions
      padding-left 120px
      @media XS
        padding-left 150px
      @media MD
        padding-left 270px
        padding-top 50px
      .row
        @media MD
          position relative
        &:last-child
          @media MD
            margin-top 25px
      .search
        display none
        @media screen and (max-width: 991px)
          anim()
          position absolute
          left 0
          top -50px
          width 100%
          display block
          height 50px
          z-index 10
          padding-right 99px
          transform translateX(-100%)
          &.is-open
            transform translateX(0%)
        @media screen and (min-width: 480px) and (max-width: 991px)
          padding-left 50px
        @media MD
          display block
          float left
          height 42px
          width 70%
        @media LG
          width 560px
          max-width 560px
        form
          width 100%
          height 100%
          position relative
          input
            anim()
            width 100%
            height 100%
            border 1px solid $border
            border-radius 30px
            padding-left 15px
            padding-right 60px
            font-size 15px
            roman()
            @media screen and (max-width: 991px)
              border-radius 0
              padding-right 42px
            &:focus
              border-color $btn-green
          button
            sn()
            position absolute
            right 0
            top 0
            width 60px
            height 42px
            background none
            border none
            @media screen and (max-width: 991px)
              width 42px
              height 50px
            &:after
              content ''
              background: url('../images/sprite.png') no-repeat 0 -200px;
              width: 19px;
              height: 20px;
              position absolute
              left 50%
              top 50%
              margin-left -(@width/2)
              margin-top -(@height/2)
            &:hover
              &:after
                background-position -50px -200px
      .mobile-search
        width 50px
        height 50px
        position absolute
        right 100px
        top -50px
        @media MD
          display none
        button
          display block
          width 100%
          height 100%
          border none
          background #fff
          border-left 1px solid $border
          border-bottom 1px solid $border
          &:hover
            background $green
            border-color $green
            &:after
              background-position -100px -250px
          &:after
            content ''
            position absolute
            left 50%
            top 50%
            background: url('../images/sprite.png') no-repeat -50px -250px;
            width: 19px;
            height: 20px;
            margin-left -(@width/2)
            margin-top -(@height/2)
      .contacts
        float right
        line-height 1.2
        padding-top 30px
        @media MD
          padding-top 0
        .tel
          position relative
          @media LG
            display inline-block
            vertical-align middle
          &:after
            content ''
            background: url('../images/sprite.png') no-repeat -100px -200px;
            width: 24px;
            height: 24px;
            position absolute
            left -30px
            top 50%
            margin-top -12px
          a
            bold()
            color #000
            font-size 18px
            cursor default
        .callback
          @media LG
            display inline-block
            vertical-align middle
            margin-left 30px
            line-height 42px
          a
            font-size 14px
            color $green
            &:hover
              color #000
      nav
        display none
        @media MD
          display block
          padding-right 250px
          margin-left -5px
        @media LG
          padding-right 300px
          margin-left -13px
        ul
          font-size 0
          line-height 42px
          li
            display inline-block
            vertical-align middle
            a
              bold()
              anim()
              display inline-block
              vertical-align middle
              font-size 14px
              color $green
              padding-left 5px
              padding-right 5px
              @media LG
                font-size 18px
                padding-left 13px
                padding-right 13px
              &:hover
                color #000
      .user-panel
        clearfix()
        position absolute
        right 0
        top -50px
        @media MD
          top 0
        .guest
          display block
        .authorised
          display none
        .cart, .guest, .authorised
          float left
          width 50px
          height 50px
          @media MD
            height 42px
            width auto
          a
            position relative
            display block
            width 100%
            height 100%
            border none
            background #fff
            border-left 1px solid $border
            border-bottom 1px solid $border
            @media MD
              border-radius 15px
              border 1px solid $border
            &:hover
              background $green
              border-color $green
        .cart
          a
            position relative
            @media MD
              padding-left 55px
              padding-right 25px
              border-radius 30px
              line-height 40px
            &:after
              content ''
              background: url('../images/sprite.png') no-repeat -200px -250px;
              width: 24px;
              height: 21px;
              position absolute
              left 50%
              top 50%
              margin-left -(@width/2)
              margin-top -(@height/2)
              @media MD
                left 20px
                margin-left 0
                background-position -200px -200px
            &:hover
              @media MD
                border-color $red
                background none
              &:after
                background-position -250px -250px
                @media MD
                  background-position -200px -200px
              .label,
              .label .value
                @media MD
                  color $green
            .label
              font-size 0
              text-indent -9999px
              @media MD
                font-size 14px
                bold()
                color #000
              .value
                text-indent 0
                font-size 16px
                width 20px
                height 20px
                line-height 20px
                background $red
                color #fff
                display block
                border-radius 50%
                font-size 11px
                text-align center
                position relative
                z-index 1
                margin 0 auto
                top 5px
                @media MD
                  top 0
                  font-size 14px
                  color #000
                  bold()
                  width auto
                  height auto
                  display inline
                  background none
                  border-radius 0
                  text-align left
        .authorised
          width 50px
          float left
          @media XS
            width 200px
          @media MD
            width auto
            width 290px
            float none
            border 1px solid $border
            padding-left 50px
            padding-right 15px
            border-radius 30px
          @media LG
            width 335px
          &:after
            @media MD
              content ''
              background: url('../images/sprite.png') no-repeat -150px -200px;
              width: 17px;
              height: 20px;
              position absolute
              left 20px
              top 50%
              margin-top -10px
          .desktop
            display none
            @media MD
              display block
            .username
              font-size 14px
              line-height 1
              bold()
              max-width 100%
              white-space nowrap
              overflow hidden
              text-overflow ellipsis
              margin-top 4px
            .options
              a
                border none
                display inline
                vertical-align middle
                border-radius 0
                width auto
                height auto
                background none
                color $green
                font-size 12px
                margin-right 15px
                &:hover
                  color #000
          .mobile
            display block
            @media XS
              width 100%
            @media MD
              display none
            a
              display block
              width 50px
              height 50px
              position relative
              @media XS
                width 100%
                display table
                max-width 100%
                max-height 50px
                overflow hidden
              &:after
                content ''
                position absolute
                left 50%
                top 50%
                background: url('../images/sprite.png') no-repeat -150px -200px;
                width: 17px;
                height: 20px;
                margin-top -(@height/2)
                margin-left -(@width/2)
                @media XS
                  left 15px
                  margin-left 0
              &:hover
                &:after
                  background-position -150px -250px
                .username
                  color #fff
              .username
                display none
                @media XS
                  display table-cell
                  vertical-align middle
                  font-size 13px
                  line-height 1.2
                  color #000
                  padding-left 45px
                  padding-right 5px
                  max-width 200px
                  bold()
        .guest
          @media MD
            margin-right 15px
          @media LG
            margin-right 30px
          a
            font-size 0
            text-indent -9999px
            @media MD
              text-indent 0
              font-size 14px
              padding-left 50px
              padding-right 25px
              border-radius 30px
              line-height 40px
              color #000
              bold()
            &:after
              content ''
              position absolute
              left 50%
              top 50%
              background: url('../images/sprite.png') no-repeat -150px -200px;
              width: 17px;
              height: 20px;
              margin-top -(@height/2)
              margin-left -(@width/2)
              @media MD
                left 20px
                margin-left 0
            &:hover
              @media MD
                border-color $green
                background none
                color $green
              &:after
                background-position -150px -250px
                @media MD
                  background-position -150px -200px
  .responsive-menu
    anim()
    position absolute
    left 0
    top 100%
    background #fff
    width 100%
    box-shadow inset 0 7px 5px -5px rgba(0,0,0,0.3);
    transform translateY(-100%)
    z-index 50
    @media MD
      display none !important
    &.is-open
      transform translateY(0%)
    li
      border-bottom 1px solid $border
      a
        anim()
        bold()
        color $green
        font-size 18px
        line-height 1
        display block
        padding 15px
        position relative
        &:hover,
        &:focus
          color #000
          padding-left 25px
          &:after
            right 5px
        &:after
          anim()
          content ''
          background: url('../images/sprite.png') no-repeat -300px -200px;
          width: 13px;
          height: 24px;
          position absolute
          right 15px
          top 50%
          margin-top -12px

