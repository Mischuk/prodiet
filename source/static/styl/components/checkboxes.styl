.checkbox,
.checkboxes
  display inline-block
  vertical-align middle
  cursor default
  & + .checkbox,
  & + .checkboxes
    margin-left 15px
  label
    display inline-block
    vertical-align middle
    font-size 0
  input
    opacity 0
    font-size 0
    width 0
    height 0
    position absolute
    left -9999px
  .icon
    size(20px)
    display inline-block
    vertical-align middle
    border 1px solid #235e21
    border-radius $radius
    cursor pointer
    position relative
    &:after
      anim()
      content ''
      width 13px
      height 9px
      background url("../images/checkbox.png") no-repeat 0 0
      position absolute
      left 50%
      top 50%
      margin-left -(@width/2)
      margin-top -(@height/2)
      opacity 0
  .label
    sn()
    font-style normal
    display inline-block
    vertical-align middle
    cursor pointer
    font-size 16px
    padding-left 5px
  input:checked + .icon
    &:after
      opacity 1