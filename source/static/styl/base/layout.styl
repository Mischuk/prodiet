$wrapper = 1200px
$gutter = 2%
html
  position relative
  min-height 100%
body
  background #fff4dc
.container
  height 100%

.wrapper
  clearfix()
  position relative
  max-width $wrapper
  height 100%
  padding-left 15px
  padding-right 15px
  margin-left auto
  margin-right auto

main
  display block
  max-width $wrapper
  padding 0 15px
  margin 0 auto
  position relative
  > article
    padding 30px 0
    @media LG
      padding 50px 100px
  .m_lead-articles,
  .m_top-items,
  .m_lead-recipes
    margin-left -15px
    margin-right -15px
    @media screen and (min-width: 1370px)
      margin-left -100px
      margin-right -100px
  .m_lead-recipes
    background url("../images/pattern_paper.jpg") repeat 0 0
    background-attachment fixed
    .top-item-carousels
      &:before,
      &:after
        display none
  .m_seo-article
    article
      padding-left 0
      padding-right 0
  > .recipes-list
    padding-top 30px
    @media LG
      padding-top 40px
.backdrop
  background rgba(0,0,0,.5)
  position absolute
  left 0
  top 0
  z-index 100
  display none
  width 100%
  height 100%
// Grid layout
.row
  clearfix()
  .col
    float left
    width 100%
    margin ($gutter/2) 0
