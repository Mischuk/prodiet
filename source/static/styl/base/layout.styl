      &.xs1
        width 100%
        margin-left 0
        margin-right 0
        &:nth-child(2n+1),
        &:nth-child(3n+1),
        &:nth-child(4n+1),
        &:nth-child(6n+1)
          margin-left 0
          margin-right 0
      &.xs2
        width ((100% - $gutter)/2)
        margin-left $gutter
        &:nth-child(2n+1)
          margin-left 0
      &.xs3
        width ((100% - $gutter*2)/3)
        margin-left $gutter
        &:nth-child(3n+1)
